<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:contextClickable="false"
    android:focusableInTouchMode="false"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_img_cours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/circle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_name_cours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:maxLines="1"
                        android:text="Lundi 3 Juin"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp"
                        android:textStyle="normal"/>

                    <TextView
                        android:id="@+id/tv_min_cours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="false"
                        android:layout_gravity="end"
                        android:text="min"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                    <TextView
                        android:id="@+id/tv_duration_cours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="end"
                        android:layout_toStartOf="@+id/tv_min_cours"
                        android:text="60"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_capacity_cours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40 places"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="14sp"
                    android:textStyle="normal"/>



            </LinearLayout>

        </LinearLayout>
    <ImageView
        android:id="@+id/iv_class_status"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="end|bottom"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:src="@android:drawable/ic_menu_add"
        android:tint="@color/cardview_dark_background"
        android:visibility="visible"/>

    </android.support.v7.widget.CardView>